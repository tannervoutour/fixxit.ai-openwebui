# Development Dockerfile for Frontend (Svelte)
FROM node:22-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --legacy-peer-deps

# Copy configuration files
COPY vite.config.ts svelte.config.js tailwind.config.js tsconfig.json postcss.config.js ./

# Create directories
RUN mkdir -p src static

# Expose Vite dev server port
EXPOSE 5173

# Start development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]